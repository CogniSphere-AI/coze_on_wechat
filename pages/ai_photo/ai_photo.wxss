/* ai_photo.wxss */
page {
  background-color: #000000;
  color: #ffffff;
}

.container {
  padding: 0;
  width: 100%;
}

.section {
  margin-bottom: 20rpx;
  width: 100%;
}

.section-title {
  display: flex;
  align-items: center;
  padding: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.lightning-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 10rpx;
}

.style-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 10rpx;
}

.style-item {
  width: 48%;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
}

.style-item image {
  width: 100%;
  height: 400rpx;
  display: block;
}

.style-name {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.6);
  color: white;
  padding: 10rpx;
  font-size: 24rpx;
  text-align: center;
}
