/**index.wxss**/
page {
  height: 100vh;
  background-color: #000000;
  color: #ffffff;
}

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  padding: 0;
}

/* Header styles */
.header {
  background-color: #000000;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  border-bottom: 1px solid #333;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

.profile-section {
  display: flex;
  align-items: center;
  width: 100%;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.profile-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #333;
  margin-right: 30rpx;
}

.profile-info {
  display: flex;
  flex-direction: column;
}

.profile-name {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

.profile-points {
  font-size: 28rpx;
  color: #999;
  text-decoration: underline;
}

.usage-notice {
  color: #ff0000;
  font-size: 28rpx;
  margin: 20rpx 0;
}

/* Menu styles */
.menu-container {
  width: 100%;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #333;
  position: relative;
}

.menu-text {
  flex: 1;
  font-size: 30rpx;
}

.fire-icon {
  color: #ff6600;
  margin-right: 10rpx;
  font-size: 32rpx;
}

.arrow {
  color: #999;
  font-size: 30rpx;
}

/* Login section */
.login-section {
  padding: 40rpx;
  display: flex;
  justify-content: center;
}

.login-button {
  background-color: #1aad19;
  color: #ffffff;
  border-radius: 10rpx;
  padding: 20rpx 60rpx;
  font-size: 30rpx;
}

.login-notice {
  color: #999;
  font-size: 28rpx;
  text-align: center;
}
