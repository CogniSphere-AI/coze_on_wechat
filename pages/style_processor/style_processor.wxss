/* style_processor.wxss */
page {
  background-color: #000000;
  color: #ffffff;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 0;
  box-sizing: border-box;
  align-items: center;
}

.header {
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
  border-bottom: 1px solid #333;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.image-container {
  flex: 1;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
  box-sizing: border-box;
}

.upload-section {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #666;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  cursor: pointer;
}

.upload-icon {
  font-size: 80rpx;
  color: #fff;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #ccc;
}

.uploaded-image, .result-image {
  max-width: 100%;
  max-height: 70vh;
  border-radius: 10rpx;
}

.warning-message {
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
}

.warning-text {
  color: #ff0000;
  font-size: 28rpx;
}

.error-message {
  width: 100%;
  padding: 20rpx;
  text-align: center;
  color: #ff6666;
  font-size: 28rpx;
}

.action-buttons {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.process-button, .save-button {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #666;
  color: #fff;
  border-radius: 10rpx;
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.process-button {
  background-color: #666;
}

.process-button[disabled] {
  background-color: #444;
  color: #999;
}

.save-button {
  background-color: #1aad19;
}

.instructions {
  width: 100%;
  padding: 20rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.instruction-text {
  color: #999;
  font-size: 24rpx;
}
